# Laboratory Information System (LIS) Environment Configuration
# Copy this file to .env and modify the values as needed

# Application Settings
APP_NAME="Laboratory Information System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, testing, production
DEBUG=true

# Database Configuration
DATABASE_URL="sqlite:///./lis.db"
DATABASE_HOST="localhost"
DATABASE_PORT=5432
DATABASE_NAME="lis_db"
DATABASE_USER="lis_user"
DATABASE_PASSWORD=""
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# Security Configuration
SECURITY_SECRET_KEY="your-secret-key-change-in-production"
SECURITY_ALGORITHM="HS256"
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_ENCRYPTION_KEY=""

# Communication Configuration
COMM_TCP_HOST="0.0.0.0"
COMM_TCP_PORT=8000
COMM_TCP_BUFFER_SIZE=4096
COMM_HL7_ENCODING="utf-8"
COMM_SERIAL_TIMEOUT=30
COMM_SERIAL_BAUDRATE=9600

# Device Configuration
DEVICE_AUTO_DISCOVER_DEVICES=true
DEVICE_SCAN_INTERVAL=60
DEVICE_TIMEOUT=30
DEVICE_RESPONSE_TIMEOUT=10

# Logging Configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="logs/lis.log"
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_STRUCTURED_LOGGING=true

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8080
API_DEBUG=false
API_RELOAD=false
API_RATE_LIMIT="100/minute" 

# BT-1500 Sensacore Analyzer Configuration
BT1500_ENABLED=true
BT1500_DEFAULT_PORT=COM1
BT1500_DEFAULT_BAUDRATE=9600
BT1500_TIMEOUT=30
BT1500_BUFFER_SIZE=8192
BT1500_AUTO_CONNECT=true
BT1500_RETRY_INTERVAL=60
BT1500_MAX_RETRIES=5

# BT-1500 Data Processing
BT1500_AUTO_PROCESS_RESULTS=true
BT1500_STORE_CALIBRATION_DATA=true
BT1500_CONVERT_TO_HL7=true
BT1500_VALIDATE_DATA=true

# BT-1500 Logging
BT1500_LOG_LEVEL=INFO
BT1500_LOG_RAW_DATA=false
BT1500_LOG_PARSED_RESULTS=true 